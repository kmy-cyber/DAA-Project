# Nombre del compilador
CXX = g++
# Flags de compilaci√≥n
CXXFLAGS = -O2 -Wall
# Nombre del ejecutable
TARGET = main
# Archivos fuente
SRC = main.cpp

RED    := \033[0;31m
GREEN  := \033[0;32m
YELLOW := \033[1;33m
BLUE   := \033[0;34m
CYAN   := \033[0;36m
RESET  := \033[0m

all: $(TARGET)
	@echo "$(GREEN)‚ú® Proyecto compilado completamente!$(RESET)"

$(TARGET): $(SRC)
	@echo "$(BLUE)üöÄ Compiling $(SRC)...$(RESET)"
	$(CXX) $(CXXFLAGS) $(SRC) -o $(TARGET)
	@echo "$(GREEN)‚úÖ Compilation finished successfully!$(RESET)"

run: $(TARGET)
	@echo "$(YELLOW)üß™ Running program...$(RESET)"
	./$(TARGET) 
	@echo "$(CYAN)‚úÖ Running completed!$(RESET)"

clean:
	@echo "$(RED)üßπ Cleaning up...$(RESET)"
	rm -f $(TARGET)
	@echo "$(RED)üóëÔ∏è Cleanup complete.$(RESET)"

